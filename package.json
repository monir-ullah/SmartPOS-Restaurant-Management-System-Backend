{
  "name": "smartpos-restaurant-management-system",
  "version": "1.0.0",
  "description": "SmartPOS: Restaurant Management System - Backend API",
  "main": "src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
